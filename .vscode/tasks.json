    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd ros2_ws && colcon build",
            "problemMatcher": []
        },
        {
            "label": "launch",
            "type": "shell",
            "command": "cd ros2_ws && source install/local_setup.bash && ros2 launch drone_bringup offboard_position_control_new.launch.py headless:=True",
            "problemMatcher": [],
            "dependsOn": ["build"]
        },
        {
            "label": "launch-gui",
            "type": "shell",
            "command": "cd ros2_ws && source install/local_setup.bash && ros2 launch drone_bringup offboard_position_control_new.launch.py headless:=False",
            "problemMatcher": [],
            "dependsOn": ["build"]
        },
        {
            "label": "launch-simulation-env",
            "type": "shell",
            "command": "cd ros2_ws && source install/local_setup.bash && ros2 launch drone_bringup simulation.launch.py headless:=False",
            "problemMatcher": [],
            "dependsOn": ["build"]
        },
    ]
}
